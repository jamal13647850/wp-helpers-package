{# فرم تماس با قابلیت‌های پیشرفته HTMX #}
<div class="contact-form-wrapper" dir="rtl">
    
    {# پیام‌های خطا #}
    <div id="contact-errors" class="errors-container"></div>
    
    <form id="contact-form" 
          hx-post="{{ wp_ajax_url() }}?action=htmx_contact_submit_contact"
          hx-target="#contact-form"
          hx-indicator="#loading-indicator"
          class="contact-form">
        
        {# Honeypot برای جلوگیری از spam #}
        <input type="text" name="website" style="display:none" tabindex="-1" autocomplete="off">
        
        <div class="form-row">
            <div class="form-group">
                <label for="contact_name" class="required">نام و نام خانوادگی</label>
                <input type="text" 
                       id="contact_name" 
                       name="name" 
                       required
                       maxlength="50"
                       placeholder="نام خود را وارد کنید"
                       class="form-control">
            </div>
        </div>
        
        <div class="form-row">
            <div class="form-group">
                <label for="contact_email" class="required">آدرس ایمیل</label>
                <input type="email" 
                       id="contact_email" 
                       name="email" 
                       required
                       placeholder="example@domain.com"
                       hx-post="{{ wp_ajax_url() }}?action=htmx_contact_validate_email"
                       hx-trigger="blur changed delay:500ms"
                       hx-target="next .validation-feedback"
                       class="form-control">
                <div class="validation-feedback"></div>
            </div>
            
            <div class="form-group">
                <label for="contact_phone" class="required">شماره تماس</label>
                <input type="tel" 
                       id="contact_phone" 
                       name="phone" 
                       required
                       pattern="09[0-9]{9}"
                       placeholder="09123456789"
                       maxlength="11"
                       hx-post="{{ wp_ajax_url() }}?action=htmx_contact_validate_phone"
                       hx-trigger="blur changed delay:500ms"
                       hx-target="next .validation-feedback"
                       class="form-control">
                <div class="validation-feedback"></div>
            </div>
        </div>
        
        <div class="form-row">
            <div class="form-group">
                <label for="contact_subject" class="required">موضوع پیام</label>
                <select id="contact_subject" name="subject" required class="form-control">
                    <option value="">انتخاب موضوع</option>
                    <option value="سوال عمومی">سوال عمومی</option>
                    <option value="درخواست همکاری">درخواست همکاری</option>
                    <option value="گزارش مشکل">گزارش مشکل</option>
                    <option value="پیشنهاد">پیشنهاد</option>
                    <option value="سایر موارد">سایر موارد</option>
                </select>
            </div>
        </div>
        
        <div class="form-row">
            <div class="form-group">
                <label for="contact_message" class="required">متن پیام</label>
                <textarea id="contact_message" 
                          name="message" 
                          required
                          rows="6"
                          minlength="10"
                          maxlength="1000"
                          placeholder="پیام خود را اینجا بنویسید..."
                          class="form-control"></textarea>
                <small class="character-count">
                    <span id="char-count">0</span> / 1000 کاراکتر
                </small>
            </div>
        </div>
        
        {# کپچا #}
        <div class="form-row">
            <div class="form-group captcha-group">
                <label for="captcha_answer" class="required">کد امنیتی</label>
                <div id="captcha-container">
                    {{ captcha('medium')|raw }}
                </div>
                <div class="captcha-input-group">
                    <input type="number" 
                           id="captcha_answer" 
                           name="captcha_answer" 
                           required
                           placeholder="نتیجه را وارد کنید"
                           class="form-control captcha-input">
                    <button type="button" 
                            hx-post="{{ wp_ajax_url() }}?action=htmx_contact_refresh_captcha"
                            hx-target="#captcha-container"
                            class="captcha-refresh-btn"
                            title="تازه‌سازی کد">
                        🔄
                    </button>
                </div>
                <input type="hidden" name="captcha_token" value="{{ captcha_token }}">
            </div>
        </div>
        
        {# دکمه ارسال #}
        <div class="form-row submit-row">
            <button type="submit" class="submit-btn" id="contact-submit">
                <span class="btn-text">ارسال پیام</span>
                <div id="loading-indicator" class="loading-spinner htmx-indicator">
                    <svg class="spinner" width="20" height="20" viewBox="0 0 24 24">
                        <circle class="path" cx="12" cy="12" r="10" fill="none" stroke="currentColor" stroke-width="4"></circle>
                    </svg>
                </div>
            </button>
            
            <small class="privacy-notice">
                با ارسال این فرم، شما با 
                <a href="/privacy-policy" target="_blank">قوانین حریم خصوصی</a> 
                ما موافقت می‌کنید.
            </small>
        </div>
        
        {{ wp_nonce_field('contact_form_nonce', '_wpnonce', false) }}
    </form>
</div>

{# JavaScript برای بهبود تجربه کاربری #}
<script>
document.addEventListener('DOMContentLoaded', function() {
    
    // شمارش کاراکترهای پیام
    const messageTextarea = document.getElementById('contact_message');
    const charCount = document.getElementById('char-count');
    
    if (messageTextarea && charCount) {
        messageTextarea.addEventListener('input', function() {
            const count = this.value.length;
            charCount.textContent = count;
            
            // تغییر رنگ نزدیک به حد مجاز
            if (count > 900) {
                charCount.style.color = '#e74c3c';
            } else if (count > 800) {
                charCount.style.color = '#f39c12';
            } else {
                charCount.style.color = '#27ae60';
            }
        });
    }
    
    // بازنشانی فرم پس از ارسال موفق
    document.body.addEventListener('resetForm', function() {
        const form = document.getElementById('contact-form');
        if (form) {
            form.reset();
            charCount.textContent = '0';
            
            // پاک کردن پیام‌های validation
            document.querySelectorAll('.validation-feedback').forEach(el => {
                el.innerHTML = '';
            });
        }
    });
    
    // بهبود validation real-time
    const emailInput = document.getElementById('contact_email');
    const phoneInput = document.getElementById('contact_phone');
    
    if (phoneInput) {
        phoneInput.addEventListener('input', function() {
            // فقط اجازه اعداد
            this.value = this.value.replace(/[^0-9]/g, '');
            
            // محدود کردن به 11 رقم
            if (this.value.length > 11) {
                this.value = this.value.slice(0, 11);
            }
            
            // اضافه کردن 09 در صورت عدم وجود
            if (this.value.length === 10 && this.value.startsWith('9')) {
                this.value = '0' + this.value;
            }
        });
    }
    
    // Disable double submit
    const form = document.getElementById('contact-form');
    if (form) {
        form.addEventListener('submit', function() {
            const submitBtn = document.getElementById('contact-submit');
            if (submitBtn) {
                submitBtn.disabled = true;
                setTimeout(() => {
                    submitBtn.disabled = false;
                }, 5000);
            }
        });
    }
});
</script>

